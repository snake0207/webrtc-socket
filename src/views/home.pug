doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    title WebRTC
  body
  header 
    h1 Welcome webRTC
  main
    div#welcome
      form#room
        input(type="text", required, placeholder="Enter room")
        button Enter room
    div#call
      div#myStream
        video#face(autoplay, playsinline, width="400", height="400")
        button#mute Mute
        button#camera Turn off Camera
        select#cameras
  script(src="/socket.io/socket.io.js")
  script(src="/public/js/app.js")